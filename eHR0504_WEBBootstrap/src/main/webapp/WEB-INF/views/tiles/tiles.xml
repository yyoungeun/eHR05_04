<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<!-- Tiles mail : defaultLayout.jsp header,menu,body,footer -->
<tiles-definitions>
	<definition name="base-definition"
		template="/WEB-INF/views/tiles/Layouts/defaultLayout.jsp"
	>
		<put-attribute name="title" value=""/>
		<put-attribute name="header" value="/WEB-INF/views/tiles/template/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/views/tiles/template/menu.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/template/footer.jsp" />
			
	</definition>
	
	<!--  hello_boot.jsp -->
	<definition name="hello/*" extends="base-definition">
		<put-attribute name="title" value="HRSPRING>Hello"/>
		<put-attribute name="body" value="/WEB-INF/views/hello/hello_boot.jsp"></put-attribute>
	</definition>
	
		<!-- bootstrap_list_template.jsp -->
	<definition name="template/*" extends="base-definition">
		<put-attribute name="title" value="HRSPING>ListTemplate"/>
		<put-attribute name="body" value="/WEB-INF/views/template/{1}.jsp"/> <!-- {1}: template하위 파일 -->
	</definition>
	
</tiles-definitions>
